@model IEnumerable<topup_project.Models.Topic>
@Scripts.Render("~/bundles/modernizr")
@{
    ViewBag.Title = "Index";

}

<h2>Topic</h2>

<p>
    <button style="background-color:greenyellow" >@Html.ActionLink("Create New", "Create")</button>
</p>
<table class="table" style="background-color:skyblue">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstDeadLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastDeadLine)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstDeadLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDeadLine)
            </td>
            <td>
                <button style="background-color:yellow">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button> 
                <button style="background-color:springgreen">@Html.ActionLink("Details", "Details", new { id = item.Id })</button> 
                <button style="background-color:hotpink">@Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button> 

                @if (User.IsInRole("QA manager"))
                {
                    <button style="background-color:greenyellow">@Html.ActionLink("Export to Excel", "ExportToExcel", "Ideas", new { topicId = item.Id }, null)</button> 


                    <button style="background-color: greenyellow">@Html.ActionLink("Export ZIP", "ExportZIP", "Ideas", new { topicId = item.Id }, null)</button> 
                }

            </td>
        </tr>
    }

</table>
